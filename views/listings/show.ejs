<% layout("/layouts/boilerplate") %>

<body>
  <div class="container">
    <div class="row">
      <div class="col-7 offset-2">
        <!-- <h3>Listing Details :</h3> -->
        <p class="card-text" style="font-size: 30px">
          <b><%= listing.title %></b>
        </p>
        <div class="card">
          <img
            src="<%= listing.image %>"
            class="card-img-top showimg"
            alt="listing_image"
          />
        </div>
        <div class="col-7">
          <div class="card-body" style="margin-left: 15px !important;">
            <br />

            <p class="desc" style="margin-left: 15px !important; font-weight: 300;">
              <%= listing.description %>
              <br />
              &#8377; <%= listing.price.toLocaleString("en-IN") %>
              <br />
              <%= listing.location %>
              <br />
              <%= listing.country %>
            </p>
          </div>
        </div>

        <div class="btns" style="margin-left: 15px !important;">
          <a
            href="/listings/<%= listing._id %>/edit"
            class="btn btn-dark offset-0"
            >Edit
          </a>

          <form
            method="POST"
            action="/listings/<%=listing._id%>?_method=DELETE"
          >
            <button class="btn btn-danger offset-3">Delete</button>
          </form>
        </div>
      </div>
    </div>
    <hr />
    <div class="col-9 offset-2 mb-3">
      <h4>Leave a Review</h4>

      <form
        action="/listings/<%= listing.id %>/reviews"
        method="POST"
        novalidate
        class="needs-validation"
      >
        <div class="mb-3 mt-3">
          <label for="rating" class="form-label">Rating</label>
          <input
            required
            class="form-range"
            type="range"
            min="1"
            max="5"
            id="rating"
            name="review[rating]"
          />
        </div>
        <div>
          <label for="comment" class="form-label">Comment</label>
          <textarea
            required
            class="form-control"
            name="review[comment]"
            id="comment"
            cols="10"
            rows="10"
          ></textarea>
          <div class="invalid-feedback">Please write a comment</div>
        </div>
        <button>Submit</button>
      </form>
      <hr />
      <h4>All Reviews</h4>
      <div class="row">

      <% for(review of listing.reviews){ %>
        <div class="card col-5 ms-5 mb-3" style="border: 1px solid black !important;">
          <div class="card-body">
            <h5 class="card-title">Card title</h5>
            <p class="card-text"><%= review.comment %></p>
            <p class="card-text"><%= review.rating %> Stars</p>
            <form class="mb-3" method="POST" action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE">
              <button>Delete</button>
            </form>
          </div>
          
        </div>

        <% } %>
      </div>
    </div>
  </div>
</body>