<% layout("/layouts/boilerplate") %>

  <body>
    <!-- <h3>All listings</h3>
    <form method="GET" action="/listings/new">
      
    </form> -->
    <div class="empt"></div>
    <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 row-cols-xs-3 index">
      <% for(let listing of allListings) { %>
        <a href="/listings/<%= listing._id %>" class="linkk">
        <div class="card"  >
          <img
            src="<%= listing.image %>"
            class="card-img-top"
            alt="listing_image"
            style="height: 16rem"
          />
          <div class="card-img-overlay">
            
          </div>
          
          <div class="card-body ">
            <p class="card-text tit">
              <b><%= listing.title %> </b><br />
              
              &#8377; <%= listing.price.toLocaleString("en-IN") %> / night <p class="city" style="margin-top: -15px;"><i class="fa-solid fa-location-dot" style="color: #ff0000;"></i>  <%= listing.location %></p>
            </p>
            
          </div>
        </div>
      </a>
        <% } %>
    </div>
    
    
  </body>
  