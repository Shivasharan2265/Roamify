    <div class="row row-cols-lg-3 row-cols-md-3 row-cols-sm-3 row-cols-xs-3 index tot">
      <% for(let listing of allListings) { %>
        <a href="/listings/<%= listing._id %>" class="linkk">
        <div class="card cr"  >
          <img
            src="<%= listing.image.url %>"
            class="card-img-top"
            alt="listing_image"
            style="height: 16rem"
          />
          <div class="card-img-overlay">
            
          </div>
          
          <div class="card-body ">
            <p class="card-text tit">
              <b><%= listing.title %> </b><br />
              
              &#8377; <%= listing.price.toLocaleString("en-IN") %> / night <p class="city" style="margin-top: -15px;"><i class="fa-solid fa-location-dot" style="color: #FF385C;"></i>  <%= listing.location %></p>
            </p>
            
          </div>
        </div>
      </a>
        <% } %>
