<% layout("/layouts/boilerplate") %>


  <body class="new">
    <div class="row">
      <div class="col-8 offset-2">
    <h3 class="heading">Create a New Listing</h3>
    <form method="POST" action="/listings" class="row g-3 needs-validation" novalidate>
      <label for="validationCustom01" class="form-label">Title</label>
      <input name="listing[title]" placeholder="Enter title" id="validationCustom01" value="Mark" class="form-control" required type="text" />
      <br /><br />
      <label for="description" class="form-label">Description</label>
      <textarea
      class="form-control"
        name="listing[description]"
        placeholder="Enter description"
        required
      ></textarea>
      <br /><br />
      <label for="imglink" class="form-label">Image Link </label><i class="fa-solid fa-link"></i>
      <input
      class="form-control"
        name="listing[image]"
        placeholder="https://example.com/users/picture.png"
        type="text"
        required
      />
      <br /><br />
      <div class="row">
        <div class="mb-3 col-4">
      <label class="form-label" for="price">Enter Price</label>
      <input class="form-control" name="listing[price]" placeholder="( Example:  &#8377; 1200 )" required type="number" />
    </div>
      <br /><br />
      <div class="mb-3 col-4">
      <label class="form-label" for="price">Country</label>
      <input class="form-control" name="listing[country]" placeholder="Enter country" type="text" required />
    </div>
   
      <br /><br />
    <div class="mb-3 col-4">
      <label class="form-label" for="price">Location</label>
      <input
      class="form-control"
        name="listing[location]"
        placeholder="Enter location"
        type="text" required
      />
    </div>
    </div>
      <br /><br />
      
      <button class="btn ">Add</button>
    </form>
  </div>
  </div>

  </body>
