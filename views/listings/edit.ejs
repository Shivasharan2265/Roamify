<% layout("/layouts/boilerplate") %>

  <br><br>
  <div class="row">
    <div class="col-8 offset-2 main">
      <h1 >Edit your Listing</h1>
      <br>
      <form
        method="POST"
        action="/listings/<%= listing._id %>?_method=PUT "
        class="row g-3 needs-validation" novalidate enctype="multipart/form-data"
      >
      <div class="mb-3">
        <label for="title" class="form-label">Title</label>
        <input
          name="listing[title]"
          class="form-control ed-in"
          style="background-color: #1b1628; color: white !important;"
          value="<%= listing.title %>"
          type="text"
        />
      </div>
        <!-- <br /><br /> -->
        <div class="mb-3">
        <label for="title" class="form-label">Description</label>
        <textarea name="listing[description]" class="form-control ed-in" style="background-color: #1b1628; color: white !important;">
              <%= listing.description %></textarea
        >
      </div>
      <div class="mb-3">
        Original Image <br>
        <img src="<%= originalImageUrl %>" alt="" height="100px" >
      </div>
      <div class="mb-3">
        <label for="imageurl" class="form-label">New Image </label>
        <input
          name="listing[image]"
          class="form-control"
         
          type="file"
        />
      </div>
        
       
        <div class="row">
          <div class="mb-3 col-4">
            <label for="title" class="form-label" >Price</label>
            <input
              name="listing[price]"
              class="form-control ed-in" 
              style="background-color: #1b1628; color: white !important;"
              value="<%= listing.price %>"
              type="number"
            />
          </div>
          <br /><br />
          <div class="mb-3 col-4">
            <label for="title" class="form-label"><i class="fa-solid fa-earth-americas"  style="color: #FF385C;"></i> &nbsp Country</label>
            <input
              class="form-control ed-in"
              style="background-color: #1b1628; color: white !important;"
              name="listing[country]"
              value="<%= listing.country %>"
              type="text"
            />
          </div>
          <br /><br />
          <div class="mb-3 col-4">
            <label for="title" class="form-label ed-in"><i class="fa-solid fa-location-dot" style="color: #FF385C;"></i> Location</label>
            <input
              class="form-control"
              style="background-color: #1b1628; color: white !important;"
              name="listing[location]"
              value="<%= listing.location %>"
              type="text"
            />
          </div>
        </div>
        <br /><br />
        <button class="btn btn-danger ">Edit</button>
      </form>
    </div>
  </div>
  <style>
    .main{
    margin-top: 50px;
    color: white;
    font-family: system-ui, -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto,
      Oxygen, Ubuntu, Cantarell, "Open Sans", "Helvetica Neue", sans-serif !important;
      background-color: #1b1628 !important;
  }
  .ed-in{
    font-weight: 100;
  }
  </style>
