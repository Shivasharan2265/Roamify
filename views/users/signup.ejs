<% layout("/layouts/boilerplate") %>
<div class="row">
  <div class="col-8 offset-2">
    <form method="POST" action="/signup" class="needs-validation" novalidate>
        <h1 class="col-6 offset-3">SignUp on Roamify</h1>
        <div class="mb-3">
            <label for="username" class="form-label">Username</label>
            <input type="text" name="username" id="username" class="form-control" placeholder="Enter your Username" required> 
        </div>
        <div class="mb-3">
            <label for="email" class="form-label">Email</label>
            <input type="text" name="email" id="email" class="form-control" placeholder="Enter your Email" required> 
        </div>
        <div class="mb-3">
            <label for="password" class="form-label">Password</label>
            <input type="password" name="password" id="email" class="form-control" placeholder="Enter your Password" required> 
        </div>
        <button class="btn btn-success">Sign-Up</button>
    </form>
  </div>
</div>
